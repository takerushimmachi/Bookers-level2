<div class="container">
<div class="row">
    <div class="col-xs-3">
<h2>User info</h2>

<div class="user-edit-image">
    <%= attachment_image_tag @user, :profile_image, :fill, 10, 10,fallback: "no_image.jpg",size:'200x200'%>
  </div>

<div class="profile-container">
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user),  class: "pull-right" %></p>
  <% end %>
</div>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>


<div class='col-xs-9'>
    <h2>Users</h2>

    <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @users.each do |user| %>
  <td>
    <%= attachment_image_tag user,:profile_image, :fill, 10, 10,fallback: "no_image.jpg",size:'100x100' %>
  </td>
  <td><%= user.name %></td>
  <td><%= link_to user_path(user) do %>Show</td>

      </tr>
<% end %>
<% end %>
    </tbody>
  </table>
</div>
</div>
</div>