<div class="container">
<div class="row">
    <div class="col-xs-3">
<h2>User info</h2>

<div class="user-edit-image">
    <%= attachment_image_tag @user, :profile_image, :fill, 10, 10,fallback: "no_image.jpg",size:'200x200'%>
  </div>

<div class="profile-container">
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user),  class: "pull-right" %></p>
  <% end %>
</div>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-xs-9">
<h2>Books</h2>
<table class='table'>
  <thead>
    <tr>
          <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
        </tr>
      </thead>
      <tbody>

      <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user,:profile_image, :fill, 10, 10,fallback: "no_image.jpg",size:'100x100' %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>

    </tr>
  </tbody>
</table>
</div>
</div>
</div>
<% end %>