<h2>User info</h2>


<%= form_for @user do |f|%>

<%= render 'layouts/error', model: f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>



  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>



