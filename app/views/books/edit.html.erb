<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Update Book' %>
<% end %>
<p><%= link_to "Show", book_path(@book) %></p>
<p><%= link_to "Back", books_path(@user) %></p>